@model List<MvcAppication_pr1.Models.Product.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Products</h2>
<a href="/Product/Add" class="btn btn-primary">Add Product</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>@p.StockQuantity</td>
                <td>@p.Category</td>
                <td>
                    <a href="/Product/Update/@p.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" asp-action="DeleteProduct" asp-controller="Product" style="display:inline">
                        <input type="hidden" name="id" value="@p.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
